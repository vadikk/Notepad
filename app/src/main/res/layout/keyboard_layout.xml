<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/one"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="26sp"
        android:background="@drawable/bg_keyboard_btn"
        android:text="1"
        android:layout_marginEnd="40dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/two"/>

    <TextView
        android:id="@+id/two"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="26sp"
        android:background="@drawable/bg_keyboard_btn"
        android:text="2"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="@id/one"
        app:layout_constraintStart_toEndOf="@id/one"
        app:layout_constraintEnd_toStartOf="@id/three"/>

    <TextView
        android:id="@+id/three"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="26sp"
        android:background="@drawable/bg_keyboard_btn"
        android:text="3"
        app:layout_constraintTop_toTopOf="@id/one"
        app:layout_constraintStart_toEndOf="@id/two"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/four"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="26sp"
        android:background="@drawable/bg_keyboard_btn"
        android:text="4"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/five"/>

    <TextView
        android:id="@+id/five"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="26sp"
        android:background="@drawable/bg_keyboard_btn"
        android:text="5"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="@id/four"
        app:layout_constraintStart_toEndOf="@id/four"
        app:layout_constraintEnd_toStartOf="@id/six"/>

    <TextView
        android:id="@+id/six"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="26sp"
        android:background="@drawable/bg_keyboard_btn"
        android:text="6"
        app:layout_constraintTop_toTopOf="@id/four"
        app:layout_constraintStart_toEndOf="@id/five"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/seven"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="26sp"
        android:background="@drawable/bg_keyboard_btn"
        android:text="7"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/eight"/>

    <TextView
        android:id="@+id/eight"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="26sp"
        android:background="@drawable/bg_keyboard_btn"
        android:text="8"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="@id/seven"
        app:layout_constraintStart_toEndOf="@id/seven"
        app:layout_constraintEnd_toStartOf="@id/nine"/>

    <TextView
        android:id="@+id/nine"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="26sp"
        android:background="@drawable/bg_keyboard_btn"
        android:text="9"
        app:layout_constraintTop_toTopOf="@id/seven"
        app:layout_constraintStart_toEndOf="@id/eight"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/zero"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="26sp"
        android:background="@drawable/bg_keyboard_btn"
        android:text="0"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/eight"
        app:layout_constraintStart_toStartOf="@id/eight"/>

    <FrameLayout
        android:id="@+id/clear"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:background="@drawable/bg_keyboard_btn"
        app:layout_constraintTop_toTopOf="@id/zero"
        app:layout_constraintStart_toStartOf="@id/nine"
        app:layout_constraintEnd_toEndOf="@id/nine">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear"
            android:layout_gravity="center"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>